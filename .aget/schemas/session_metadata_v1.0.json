{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/gmelli/aget-aget/schemas/session_metadata_v1.0.json",
  "title": "AGET Session Metadata",
  "description": "Schema for AGET session metadata v1.0.0",
  "type": "object",
  "required": ["date", "duration_minutes", "objectives", "outcomes"],
  "properties": {
    "date": {
      "type": "string",
      "format": "date",
      "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$",
      "description": "Session date in YYYY-MM-DD format"
    },
    "duration_minutes": {
      "type": "integer",
      "minimum": 1,
      "maximum": 600,
      "description": "Session duration in minutes (max 10 hours)"
    },
    "objectives": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      },
      "description": "What the session aimed to accomplish"
    },
    "outcomes": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      },
      "description": "What was actually accomplished"
    },
    "learnings": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "description"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^L[0-9]+$",
            "description": "Learning ID (e.g., L24)"
          },
          "description": {
            "type": "string",
            "minLength": 1,
            "description": "Learning description"
          }
        }
      },
      "description": "Learnings captured during session"
    },
    "issues_filed": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["number", "title"],
        "properties": {
          "number": {
            "type": "integer",
            "minimum": 1,
            "description": "GitHub issue number"
          },
          "title": {
            "type": "string",
            "minLength": 1,
            "description": "Issue title"
          },
          "url": {
            "type": "string",
            "format": "uri",
            "description": "Issue URL"
          }
        }
      },
      "description": "GitHub issues filed during session"
    },
    "commits": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["hash", "message"],
        "properties": {
          "hash": {
            "type": "string",
            "pattern": "^[a-f0-9]{7,40}$",
            "description": "Git commit hash (short or long)"
          },
          "message": {
            "type": "string",
            "minLength": 1,
            "description": "Commit message"
          }
        }
      },
      "description": "Git commits made during session"
    },
    "files_changed": {
      "type": "integer",
      "minimum": 0,
      "description": "Number of files modified"
    },
    "patterns_used": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "version"],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1,
            "description": "Pattern name (category/name format)"
          },
          "version": {
            "type": "string",
            "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$",
            "description": "Pattern version (semver)"
          }
        }
      },
      "description": "Patterns used during session with versions"
    },
    "agets_collaborated": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "description": "Other AGETs involved in session"
    },
    "pain_points": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "description": "Difficulties or frustrations encountered"
    },
    "next_steps": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "description": "Follow-up tasks for future sessions"
    }
  },
  "additionalProperties": false
}
